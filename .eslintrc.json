{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "describe": true,
        "expect": true,
        "test": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "object-curly-spacing": ["error", "always"],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
